<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_800</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_pokeinfo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.PokeInfo</item>
    </style>

    <style name="CardType">
        <item name="android:radius">10dp</item>
    </style>

    <style name="Theme.PokeInfo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PokeInfo.popupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/blue_800</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">center</item>

        <item name="paddingStart">@dimen/paddingStartEditText</item>
        <item name="paddingEnd">@dimen/paddingEndEditText</item>
        <item name="android:paddingTop">@dimen/paddingTopEditText</item>
        <item name="android:paddingBottom">@dimen/paddingBottomEditText</item>
    </style>

    <style name="CustomEditTextDisabled" parent="CustomEditText">
        <item name="android:enabled">false</item>
    </style>

</resources>